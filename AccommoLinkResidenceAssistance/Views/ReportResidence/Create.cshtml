@model AccommoLinkResidenceAssistance.Models.ReportResidence

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ReportResidence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Residences.Name" class="control-label"></label>
                <select asp-for="Residences" class ="form-control" asp-items="ViewBag.ResidenceList">
                    <option disabled selected hidden>Please select an option</option>
				</select>
				<span asp-validation-for="Residences" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResidenceIssue" class="control-label"></label>
                <textarea asp-for="ResidenceIssue" class="form-control"></textarea>
                <span asp-validation-for="ResidenceIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

