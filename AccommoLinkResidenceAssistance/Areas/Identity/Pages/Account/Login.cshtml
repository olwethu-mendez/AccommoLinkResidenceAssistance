@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<div class="wrap">
<h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h2>Welcome Back. Please Login Below</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-box">
                    <input asp-for="Input.UserName" placeholder="Username" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="input-box">
                    <input asp-for="Input.Password" placeholder="Password" autocomplete="current-password" aria-required="true" />
                    <box-icon name='lock' ></box-icon>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                    <div class="forgot">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button id="login-submit" type="submit" class="button">Log in</button>
                <div class="Register-link">
                    @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                    <p>
                        Don't have an account? <a asp-controller="Authentication" asp-action="Register">Register as a new user</a>
                    </p>
                    @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
    </div>
